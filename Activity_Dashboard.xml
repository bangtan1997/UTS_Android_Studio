<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:ignore="ExtraText">

    <!-- Bagian Profil Pengguna -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anita"
        android:textSize="18sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintMarginStart="16dp"/>

    <!-- Saldo dan Ikon Menu Utama -->
    <LinearLayout
        android:id="@+id/balanceContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#3498db"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <TextView
            android:id="@+id/totalBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 2.684"
            android:textSize="24sp"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/balanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Balance"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

        <!-- Menu Pindai, Kirim, Isi Saldo, Semua -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/scan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/scann"
                android:layout_marginEnd="20dp" />

            <ImageView
                android:id="@+id/send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/send"
                android:layout_marginEnd="20dp" />

            <ImageView
                android:id="@+id/topup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/topup"
                android:layout_marginEnd="20dp" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/seeall" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bagian Tambahkan Metode Pembayaran -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/balanceContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tambahkan Metode Pembayaran"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/addPaymentMethod"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tambah" />
    </LinearLayout>

    <!-- Ikon-ikon untuk kategori layanan -->
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/addPaymentMethod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="8dp"
        tools:ignore="NotSibling">

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/internet"
            android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/electrice"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/transport"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transport"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/debt"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/education"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/paylatter"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paylatter"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/game"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Kategori Internet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/more"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>

    </GridLayout>

    <!-- Tambahkan layout untuk ikon lain, seperti Electricity, Transport, Loan, dst. -->


    <!-- Navigasi bawah -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/history" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/qris" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/inbox" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
